<!DOCTYPE html>
<html lang="en">

	<head>

		<meta charset="UTF-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- favicon -->
		<link
		rel="icon" href="/assets/icons/favicon_io/favicon.ico"/>

		<!-- BOOTSTRAP CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
		<!-- FONTAWESOME -->
		<script src="https://kit.fontawesome.com/25a22dfa89.js" crossorigin="anonymous"></script>
		<!-- CSS -->
		<link rel="stylesheet" href="/assets/styles/style.css">
		<title>
			{% block title %}{% endblock %}
		</title>

	</head>

	<body
		class="d-flex flex-column">
		<!-- HEADER -->
		<header class="bg-dark py-3">
			<div class="container">
				<div class="d-flex flex-wrap align-items-center justify-content-between">
					<a href="/" class="d-flex align-items-center text-white text-decoration-none mb-2 mb-lg-0 me-4">
						<img src="/assets/icons/logo.png" alt="logo" width="40" height="40" class="me-2">
						<span class="fs-4 multicolor-heading">WheelyGO</span>
					</a>

					<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
						<li>
							<a href="/vehicles" class="nav-link px-2 {{ activeListOfVehicles | raw }}">Liste des véhicules</a>
						</li>
						{% if user[0] == 1 %}
							<li>
								<a href="/admin" class="nav-link px-2 {{ activeAdmin | raw }}">Panel administrateur</a>
							</li>
						{% endif %}
					</ul>

					<div class="text-end">
						{% if user is not null %}
							<a href="/profile" class="btn btn-outline-light me-2">Mon compte</a>
							<a href="/logout" class="btn btn-warning">Déconnexion</a>
						{% else %}
							<a href="/login" class="btn btn-outline-light me-2">Se connecter</a>
							<a href="/register" class="btn btn-warning signup">S'inscrire</a>
						{% endif %}
					</div>
				</div>
			</div>
		</header>
		<!-- HEADER -->
		<div
			class="flex-grow">
			<!-- Contenu principal -->
			{% block content %}{% endblock %}
		</div>
		<!-- FOOTER -->
		<div class="container">
			<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
				<p class="col-md-4 mb-0 text-body-secondary">&copy; 2023 WheelyGo, Inc</p>
			</footer>
		</div>
		<!-- FOOTER -->

		<!-- BOOTSTRAP JS -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	</body>
</html>
